/* pages/purchaseTemplate/purchaseTemplate.wxss */

.purchaseTemplate {
  width: 100%;
  float: left;
}

.navigationAdd {
  width: 100%;
  height: 88rpx;
  background: #f2f2f2;
  position: relative;
}

.navigationAdd image {
  position: absolute;
  width: 34rpx;
  height: 36rpx;
  top: 50%;
  right: 30rpx;
  margin-top: -18rpx;
}

/* 列表 */

.weui-cell_switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}

.weui-cell__bd {
  font-size: 32rpx;
  line-height: 100rpx;
  flex: 4;
  margin-left: 30rpx;
}

.editImageBox image {
  width: 42rpx;
  height: 45rpx;
}

.delImageBox image {
  width: 42rpx;
  height: 45rpx;
}

.editImageBox {
  flex: 1;
}

.delImageBox {
  flex: 1;
}

.weui-cell__ft switch {
  flex: 1;
  margin-right: 20rpx;
}

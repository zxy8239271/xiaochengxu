/* pages/myClient/myClient.wxss */

page {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
}

.myClient {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/*tab切换  */

.tabbar {
  font-size: 30rpx;
  width: 100%;
  height: 87rpx;
}

.swiper-tab {
  padding-left: 80rpx;
  width: 100%;
  height: 87rpx;
  background: #f4f4f4;
  display: flex;
  border-bottom: 1rpx solid #e1e1e1;
}

.swiper-tab-list {
  flex: 1;
  height: 79rpx;
}

.listOne {
  display: flex;
  justify-content: flex-end;
}

.swiper-tab-list>view {
  width: 200rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  height: 85rpx;
  border-bottom: 5rpx solid #f4f4f4;
}

.swiper-tab-list .on {
  color: #00954d;
  border-bottom: 5rpx solid #00954d;
}

/*tab小家号  */

.addIcon {
  /* padding-right:20rpx;   */
  width: 61rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: #eae8e8; *//* border-left: 3rpx solid #fff; */
}

.addIcon image {
  width: 45rpx;
  height: 45rpx;
}

/*lists部分  */

.section {
  width: 100%;
  height: calc(100% - 87rpx);
  flex: 1;
  /*超出部分用滚动条展示*/
  overflow: scroll;
  /* padding: 0 60rpx 0 0;  */
}

.listsContain {
  color: #000;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.main {
  display: flex;
  padding: 0 0rpx 0 26rpx;
  border-bottom: 1rpx solid #f8f8f8;
  align-items: center;
  height: 160rpx;
}

/*左边头像*/

.left {
  width: 120rpx;
  height: 120rpx;
  margin-right: 28rpx;
  overflow: hidden;
}

.left>image {
  width: 100%;
}

/*中间名称*/

.center {
  display: flex;
  flex-direction: column;
  flex: 1;
  font-size: 28rpx;
  letter-spacing: 5rpx;
}

.center .name {
  color: #000;
  flex: 1;
  display: flex;
  align-items: center;
}

.center .way {
  flex: 1;
  display: flex;
  align-items: center;
}

.center .way text {
  color: #666;
  padding: 4rpx 6rpx;
  line-height: 1;
  border: 1rpx solid #666;
}

/*右边电话*/

.right {
  display: flex;
  flex-direction: column;
  padding-right: 70rpx;
}

.rightTop {
  display: flex;
  flex: 1;
  align-items: center;
}

.rightTop image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.rightTop>view {
  line-height: 1.1;
  border-bottom: 1rpx solid #000;
}

.rightBottom {
  display: flex;
  flex: 1;
  align-items: center;
  background: #eee;
}

/*字母*/

.zimu {
  padding: 0 0 0 26rpx;
  background: #f8f8f8;
  height: 50rpx;
  width: 100%;
}

/*五角星*/

.star {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
}

.star image {
  width: 32rpx;
  height: 32rpx;
  background: #000;
}

/*一个大盒子有宽和高里面装着五角星*/

/*大盒子底下装着*/

/*刷新中  */

.section>.header {
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  background: #fafafa;
  line-height: 50rpx;
  color: #999;
}

/*加载中和没有更多数据了的提示  */

.bottom>view {
  line-height: 60rpx;
  font-size: 28rpx;
  /* background: #fafafa; */
  text-align: center;
  color: #999;
}

/*点击哪个字母就在正中间展示哪个字母*/

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  font-size: 52rpx;
  border-radius: 5rpx;
  z-index: 1;
}

/*展示右边字母部分*/

.searchLetter {
  position: fixed;
  right: 0rpx;
  top: 87rpx;
  height: calc(100% - 87rpx);
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 99;
  font-size: 26rpx;
  /* border-radius: 20rpx; */
}

.searchLetter view {
  width: 100%;
  flex: 1;
  padding: 0rpx 10rpx;
  font-size: 10px;
}

.touchClass {
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
}

.listsUl {
  height: 100%;
}

/*右上角添加符号的内容 */

.addMain {
  position: fixed;
  right: 61rpx;
  top: 0;
  background: red;
  flex-direction: column;
  text-align: center;
  display: flex;
  z-index: 999;
  background: rgba(0, 0, 0, 0.7);
  color: #fafafa;
  font-size: 28rpx;
}

.addMain view {
  padding: 15rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add {
  border-bottom: 1px solid #999;
}

/*没有数据，展示图片时  */

.emptyData {
  width: 100%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: rgba(0, 0, 0, 0.8);
  font-size: 28rpx;
}

.emptyData image {
  width: 136rpx;
  height: 202rpx;
  margin-bottom: 44rpx;
}

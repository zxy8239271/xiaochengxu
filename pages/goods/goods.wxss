/*头部开始  */

.common-header {
  height: 88rpx;
  width: 100%;
  display: flex;
  align-items: center;
  text-align: center;
  padding: 0px 26rpx;
 
  background: #f4f4f4;
  line-height: 88rpx;
}

.supp-header {
  /* position: fixed;
  top: 0px;
  left: 0px; */
  width: 100%;
  /* z-index: 999; */
}

.common-header-left {
  display: flex;
  align-items: center;
  flex: 1;
  text-align: left;
  font-size: 28rpx;
}

.common-header-left  image {
  /* -moz-transform: rotate(90deg);

.goodsAdd {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.goodsAdd .form-list {
  flex: 1;
  width: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
}

.weui-cells {
  font-size: 32rpx;
}

.weui-input {
  padding-left: 10px;
}

.weui-select_in-select-after {
  padding-left: 10px;
}

.btn-area {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #00954d;
  color: white;
  height: 88rpx;
  /* position: fixed;
  bottom: 0px; */
  width: 100%;
  /* z-index: 999; */
}

.weui-cell {
  padding: 30rpx;
  border-bottom: 1px solid #e1e1e1;
}

.weui-cell__bd_in-select-before, .weui-cell__hd_in-select-after {
  padding-left: 0px;
}

.weui-cell:before {
  width: 100%;
  border-top: none;
  content: '';
}

.weui-label {
  width: auto;
}

.img-goods {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #e1e1e1;
}

.caigou {
  flex: 6;
}

caigoujia {
  flex: 5;
}

.editSupplier {
  background: #00954d;
  color: #fff;
  padding: 10rpx 10rpx;
}

.wenhao {
  text-align: right;
}

.wenhao image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}

/*删除商品 */

.delGoods {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  color: #fff;
  background: red;
}

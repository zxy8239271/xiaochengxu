/* pages/testPhone/testPhone.wxss */

.login {
  width: 100%;
  float: left;
  height: 100%;
  background: #fff;
  border-top: 18rpx solid #f8f8f8;
}

.login-title {
  margin-top: 38rpx;
  text-align: center;
}

.login-logo image {
  width: 200rpx;
  height: 200rpx;
}

.login-name {
  margin-top: 26rpx;
  margin-bottom: 60rpx;
}

.login-input {
  padding: 0rpx 50rpx;
  float: left;
  width: 100%;
}

.line {
  float: left;
  width: 100%;
  border-bottom: 1px solid #e1e1e1;
  padding: 30rpx 0rpx;
}

.line-btn {
  padding: 30rpx 0rpx;
  float: left;
  width: 100%;
}

.login-phone input {
  width: 65%;
  float: left;
}

.login-phone button {
  width: 33%;
  float: right;
  font-size: 30rpx;
  padding-left: 5px;
  padding-right: 5px;
  background-color: #fff;
  border-radius: 0px;
}

.login-phone button::after {
  border: 1px solid #000;
  border-radius: 0px;
}

.zuc {
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  color: white;
  font-size: 34rpx;
  margin-top: 42rpx;
  background: #00954d;
  width: 100%;
}

.login-fixed {
  position: fixed;
  text-align: center;
  bottom: 40rpx;
  width: 100%;
  font-size: 28rpx;
  color: #999;
}

/*新增限制每一行的高度  */

.line {
  height: 115rpx;
}

button {
  top: -20%;
}

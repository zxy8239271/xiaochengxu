/* pages/inviteStaff/inviteStaff.wxss */

.invite {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 60rpx 46rpx 0rpx 46rpx;
  justify-content: center;
  /* align-items: center; */
  text-align: center;
}

.invite .img {
  height: 120rpx;
  width: 120rpx;
  margin-bottom: 64rpx;
}
.section{
   font-size: 28rpx;
   margin-bottom: 40rpx;
   display: flex;
   align-items: center
}
.tips {
  font-size: 28rpx;
}

.invite-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 246rpx;
}

.invite-btn text {
  display: block;
  flex: 1;
  border: 1px solid #00954d;
  font-size: 36rpx;
  padding: 10rpx;
}

.invite-btn .cancle {
  margin-right: 60rpx;
  color: #00954d;
}

.sure {
  background: #00954d;
  color: white;
}

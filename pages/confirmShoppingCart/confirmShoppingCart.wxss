/* pages/confirmShoppingCart/confirmShoppingCart.wxss */

.fixed {
  position: fixed;
  top: 0px;
  width: 100%;
  height: 100%;
}

.confirmShoppingCart {
  width: 100%;
  height: 100%;
  background: #efeff4;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #000;
}

/* 收获地址信息 */

.address {
  margin-top: 18rpx;
  padding: 10rpx 26rpx;
  display: flex;
  width: 100%;
  height: 170rpx;
  background: #fff;
  align-items: center;
}

/*定位图片  */

.addressIco {
  width: 144rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.addressIco  {
  width: 38rpx;
  height: 50rpx;
}

/*收货详情  */

.mainDetail {
  padding-left: 30rpx;
  flex: 1;
}

.bottom {
  flex: 1;
  align-items: center;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}

.mainDetail-div {
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: left;
}

.mainDetail .top {
  height: 70rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.top .topLeft {
  /* flex: 1; */
}

/*右键头  */

.youjiantou {
  background: #fff;
  padding-right: 20rpx;
  justify-content: flex-end;
  display: flex;
  align-items: center;
  width: 96rpx;
}

.youjiantou image {
  width: 16rpx;
  height: 32rpx;
}

/*防止中间内容区域内容过多，设置超出部分以滚动条的形式 */

.container {
  flex: 1;
  overflow: scroll;
}

/*期望到达时间*/

.chooseTime {
  border-top: 1px solid #e1e1e1;
  border-bottom: 1px solid #e1e1e1;
  margin-bottom: 16rpx;
}

.picker {
  padding: 0 20rpx;
  width: 100%;
  height: 74rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
}

.hopeTime, .dateDetail {
  flex: 1;
  display: flex;
  align-items: center;
}

.dateDetail {
  display: flex;
}

.dateDetail view {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  margin-right: 20rpx;
  color: #00954d;
}

.dateDetail image {
  width: 14rpx;
  height: 24rpx;
}

/* 中间详情部分*/

.containerDetailHeader {
  height: 78rpx;
  background: #fff;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-top: 1px solid #e1e1e1;
  /*border-bottom: 1px solid #e1e1e1;*/
}

.containerDetail>view {
  margin-bottom: 16rpx;
}

.containerDetailHeader image {
  width: 31rpx;
  height: 34rpx;
  margin-right: 18rpx;
}

.comName image {
  width: 31rpx;
  height: 34rpx;
}

.leftImage {
  width: 34rpx;
  height: 18rpx;
}

.comName {
  flex: 1;
  padding: 0rpx 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.allNum {
  padding-right: 50rpx;
}

/*list部分  */

.listContainer {
  padding: 0 20rpx;
  display: flex;
  height: 75rpx;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  border-top: 1px solid #e1e1e1;
}

.listContainer .img1 {
  width: 34rpx;
  height: 18rpx;
}

.listContainer .jiantouS {
  -moz-transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
  -o-transform: rotate(180deg);
  transform: rotate(180deg);
  /*IE*/
  filter: FlipH;
}

.listContainer .img2 {
  width: 30rpx;
  height: 27rpx;
  margin: 0 18rpx;
}

.listContainer .kind {
  flex: 1;
  color: #000;
}

.listContainer .kindNum {
  margin-right: 28rpx;
  color: #666;
}

.listContainer .kindPrice {
  color: #666;
}

/* 买家留言 */

.buyMessage {
  display: flex;
  padding: 0 20rpx;
  border: 1px solid #e1e1e1;
  background: #fff;
}

.buyMessage text {
  line-height: 77rpx;
  margin-right: 20rpx;
}

.buyMessage input {
  height: 77rpx;
  color: #999;
  flex: 1;
}

/* list展开的内容部分*/

.openLists {
  padding: 0 20rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-top: 1px solid #e1e1e1;
}

.openLists image {
  width: 120rpx;
  height: 120rpx;
}

.openListsDis {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  font-size: 28rpx;
  margin-left: 24rpx;
}

.detailCaiName {
  line-height: 60rpx;
}

/* .allWeight {

} */

/*底部footer*/

.footer {
  z-index: 999;
  height: 100rpx;
  width: 100%;
  background: #575656;
  display: flex;
  position: fixed;
  bottom: 0px;
  justify-content: flex-start;
  font-size: 34rpx;
  color: #fff;
}

.footer .left {
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.footer .left .allMoney {
  font-size: 26rpx;
  padding-left: 20rpx;
}

.allNum {
  padding-right: 0;
}

.footer .sureBtn {
  width: 250rpx;
  height: 100%;
  font-size: 30rpx;
  background: #00954d;
  display: flex;
  justify-content: center;
  align-items: center;
}
